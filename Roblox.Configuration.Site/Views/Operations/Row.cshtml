@model Roblox.ApiControlPlane.Client.IOperation

<tr class="operation-row" data-id="@Model.ID" data-name="@Model.Name" data-enabled="@Model.IsEnabled">
    <td>@Model.ID</td>
    <td style="text-align: center;">
        <button type="button" class="btn @(Model.IsEnabled ? "btn-primary" : "btn-default") btn-xs" data-toggle-operation data-toggle-value="@(!Model.IsEnabled)">
            @if (Model.IsEnabled)
            {
                <span class="glyphicon glyphicon-ok"></span>
            }
            else
            {
                <span class="glyphicon glyphicon-remove"></span>
            }
        </button>
    </td>
    <td>@Html.DisplayFor(m => m.Name)</td>
    <td>@Html.DisplayFor(m => m.Created)</td>
    <td>@Html.DisplayFor(m => m.Updated)</td>
</tr>